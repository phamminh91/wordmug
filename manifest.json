{
  "name": "Wordmug",
  "description": "Learn new words for a better good",
  "version": "0.0.1",
  "manifest_version": 2,
  "icons": {
    "128": "assets/128.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "exclude_globs": ["*://shopee*/", "*://*.shopee*/", "*://localhost*/"],
      "css": ["contentScript.css"],
      "js": ["contentScript.js"]
    }
  ],

  "permissions": [
    "http://*/",
    "storage",
    "identity",
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "assets/128.png",
    "default_title": "Make this page red"
  }
}
